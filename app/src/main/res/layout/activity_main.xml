<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <TextView
        style="@style/title"
        android:background="@color/blue"
        android:text="Nhóm 10" />

    <TextView
        style="@style/title"
        android:background="@color/green"
        android:text="Quản lý sản phẩm" />

    <EditText
        android:id="@+id/edtmasp"
        style="@style/edt"
        android:hint="Nhập mã sản phẩm" />

    <EditText
        android:id="@+id/edttensp"
        style="@style/edt"
        android:hint="Nhập tên sản phẩm" />

    <EditText
        android:id="@+id/edtslsp"
        style="@style/edt"
        android:hint="Nhập số lượng sản phẩm"
        android:inputType="number" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <Button
            android:id="@+id/btnthem"
            style="@style/button"
            android:text="Thêm" />

        <Button
            android:id="@+id/btnxoa"
            style="@style/button"
            android:text="Xóa" />

        <Button
            android:id="@+id/btnsua"
            style="@style/button"
            android:text="Sửa" />

        <Button
            android:id="@+id/btnthoat"
            style="@style/button"
            android:text="Thoát" />
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:gravity="center">

        <Button
            android:id="@+id/btn_doimau_green"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/button_press"
            android:layout_marginRight="20dp" />

        <Button
            android:id="@+id/btn_doimau_red"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_click_red" />


    </LinearLayout>

    <androidx.recyclerview.widget.RecyclerView
        android:id="@+id/revSP"
        style="@style/rev" />
    <!--    <androidx.recyclerview.widget.RecyclerView-->
    <!--        android:layout_width="match_parent"-->
    <!--        android:layout_height="wrap_content"-->
    <!--        android:id="@+id/revSP"/>-->
</LinearLayout>